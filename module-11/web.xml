id="WebApp_ID" version="4.0">

  <display-name>Miranda_11</display-name>
  
  <welcome-file-list>
    <welcome-file>views/first.jsp</welcome-file>
  </welcome-file-list>
  
  <context-param>
  	<param-name>dbUrl</param-name>
  	<param-value>jdbc:mysql://localhost:3306/module_11_db</param-value>
